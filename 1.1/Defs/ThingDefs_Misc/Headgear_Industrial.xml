    <!-- +++++ Balaclava +++++ -->
    <ThingDef ParentName="HatMakeableBase">
		<defName>VAE_Headgear_Balaclava</defName>
		<label>balaclava</label>
		<description>A full face textile mask. Hides the mimic and makes hard to read.</description>
		<graphicData>
			<texPath>Things/Headgear/Balaclava/Balaclava</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.01</generateCommonality>
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2200</WorkToMake>
			<Mass>0.35</Mass>
            <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.12</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.05</MentalBreakThreshold>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Headgear/Balaclava/Balaclava</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>IndustrialMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>VAE_MilitaryClothing</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

