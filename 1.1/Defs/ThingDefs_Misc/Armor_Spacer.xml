    <!-- +++++ Light Marine Helmet +++++ -->
	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>VAE_Headgear_LightMarineHelmet</defName>
		<label>light marine helmet</label>
		<description>A light marine armor helmet, providing wearer with advanced situational awareness and protection despite having an exposed lower half of the face.\n\nArmor like this is often used by imperial scouting parties.</description>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.25</generateCommonality>
		<graphicData>
			<texPath>Things/Headgear/LightMarineHelmet/LightMarineHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>20</Plasteel>
		</costList>
		<statBases>
			<WorkToMake>17000</WorkToMake>
			<MaxHitPoints>160</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.74</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>2</Insulation_Cold>
			<Insulation_Heat>4</Insulation_Heat>
			<EquipDelay>4</EquipDelay>
		</statBases>
		<thingCategories Inherit="False">
			<li>Headgear</li>
		</thingCategories>
		<thingSetMakerTags>
			<li>RewardSpecial</li>
		</thingSetMakerTags>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Headgear/LightMarineHelmet/LightMarineHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
				<li>Royal</li>
				<li>RoyalTier2</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>PoweredArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>9</Crafting>
