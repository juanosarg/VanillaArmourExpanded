<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ##### Medieval ##### -->
    <!-- +++++ Plate Gloves +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>VAE_Handwear_PlateGloves</defName>
		<label>plate gloves</label>
		<description>A pair of simple metal gloves. Due to the thickness of the material, they reduce general work speed of the wearer.</description>
		<graphicData>
			<texPath>Things/Handwear/PlateGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>2.2</Mass>
			<StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal> 
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>
	
    <!-- ##### Spacer ##### -->
    <!-- +++++ Marine Gloves +++++ -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>VAE_Handwear_MarineGloves</defName>
		<label>marine gloves</label>
		<description>A pair of marine gloves with enhanced grip assistance and set of embedded recoil stabilisers.</description>
		<graphicData>
			<texPath>Things/Handwear/PowerArmorGloves</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>
		<costList>
			<Plasteel>20</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToMake>16000</WorkToMake>
			<Mass>2</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.74</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>2</Insulation_Cold>
 			<Insulation_Heat>4</Insulation_Heat>
            <EquipDelay>2.5</EquipDelay>
		</statBases>	
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>VAE_BootsAndGloves</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>PoweredArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options"> <!-- Vanilla Power Armor -->
			<options>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.9,0.9,0.9)</only>
				</li>
			</options>
		</colorGenerator>
    </ThingDef>

</Defs>